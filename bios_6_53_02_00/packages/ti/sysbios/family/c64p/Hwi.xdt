%/*
% *  ======== Hwi.xdt ========
% */
%/*
% * Do not generate the vector table if this is a ROM assembly.
% */

%/* Interrupt vector table */
asm("           .sect \".vecs\"         ");
asm("           .align 0x400            ");
asm("           .nocmp                  ");
%var Hwi = xdc.module("ti.sysbios.family.c64p.Hwi");
%//print("Generating c64p interrupt vector table.");
%var len = Hwi.interrupt.length;
%var cname, iname;
%for (var i = 0; i < len; i++) {
%    iname = Hwi.interrupt[i].name;
%    if (iname == "")  {
%        iname = Program.build.target.asmName("ti_sysbios_family_c64p_Hwi_int" + i);
%    }
%    else {
%        iname = Program.build.target.asmName(iname.substr(0));
%    }
%    if (Hwi.interrupt[i].useDispatcher) {
%       cname = Program.build.target.asmName("ti_sysbios_family_c64p_Hwi_dispatchAlways");
%    }
%    else {
%       cname = String(Hwi.interrupt[i].pfxn);
%       if (cname == "null")  {
%           cname = iname;
%       }
%       else {
%           cname = Program.build.target.asmName(cname.substr(1));
%       }
%    }
%   
%    /* Need this label for backwards compatibility */ 
%    if (i == 0) {
%        var hwi0 = Program.build.target.asmName("ti_sysbios_family_c64p_Hwi0");
asm("           .global `hwi0`          ");
asm("`hwi0`:                            ");
%    }
asm("           .global `iname`         ");
asm("           .global `cname`         ");
asm("`iname`:                           ");
%    if (i == 0) {
asm("           nop                     ");
asm("           nop                     ");
asm("           nop                     ");
asm("           mvkl    `cname`, b0     ");
asm("           mvkh    `cname`, b0     ");
asm("           b       b0              ");
asm("           nop                     ");
asm("           nop     4               ");
%    }
%    else {
asm("           stw     b0, *b15--[2]   ");
asm("           mvk     `i`, b0         ");
asm("           stw     b0, *b15[1]     ");
asm("           mvkl    `cname`, b0     ");
asm("           mvkh    `cname`, b0     ");
asm("           b       b0              ");
asm("           ldw     *++b15[2], b0   ");
asm("           nop     4               ");
%    }

%}
%if (Hwi.resetVectorAddress !== undefined) {
%    cname = String(Hwi.interrupt[0].pfxn);
%    if (cname.substr(1) == "c_int00") {
%	 /* c_int00 is special -- it has leading '_' for ELF and COFF */
%	 cname = "_" + "c_int00";
%    }
%    else {
%        cname = Program.build.target.asmName(cname.substr(1));
%    }
%
asm("           .sect \".resetVector\"         ");
%    var reset = Program.build.target.asmName("ti_sysbios_family_c64p_resetVector");
asm("           .global `reset`         ");
asm("`reset`:                           ");
asm("           nop                     ");
asm("           nop                     ");
asm("           nop                     ");
asm("           mvkl    `cname`, b0     ");
asm("           mvkh    `cname`, b0     ");
asm("           b       b0              ");
asm("           nop                     ");
asm("           nop     4               ");
%}

